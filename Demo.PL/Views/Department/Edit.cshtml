@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name Department</h1>
<div asp-validation-summary="All"></div>
<form asp-action="Edit">
    <div class="from-group">
        <label class="col-from-label" asp-for="Code"></label>
        <input class="from-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="from-group">
        <label class="col-from-label" asp-for="Name"></label>
        <input class="from-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="from-group">
        <label class="col-from-label" asp-for="DateOfCreation"></label>
        <input class="from-control" asp-for="DateOfCreation" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>

    <input type="submit" value="Save" class="btn btn-primary" /> |
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>


